{
  "name": "nodejs-complete-guide",
  "version": "1.0.0",
  "description": "",
  "type": "commonjs",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist && rimraf data",
    "build": "npm run clean && tsc && cp -r src/images dist/images 2>/dev/null || mkdir -p dist/images",
    "watch": "tsc --watch",
    "watch:images": "chokidar 'src/images/**/*' -c 'cp -r src/images dist/images'",
    "watch:public": "chokidar 'src/public/**/*' -c 'cp -r src/public dist/public'",
    "dev": "npm run build && concurrently \"npm:watch\" \"npm:watch:images\" \"npm:watch:public\" \"nodemon dist/app.js\"",
    "start": "cross-env NODE_ENV=production node dist/app.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.10",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "multer": "^2.0.2",
    "sass": "^1.97.3",
    "uuid": "^13.0.0"
  }
}
